<odoo>
    <record id="view_hiscox_case_form" model="ir.ui.view">
        <field name="name">hiscox.case.form</field>
        <field name="model">hiscox.case</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="application_status"/>
                        <field name="qr_code" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hiscox_case" model="ir.actions.act_window">
        <field name="name">Hiscox Cases</field>
        <field name="res_model">hiscox.case</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hiscox_case" name="Hiscox Cases" action="action_hiscox_case"/>
</odoo>